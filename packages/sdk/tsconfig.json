{
  "compilerOptions": {
    // Output
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,

    // Module system
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",

    // Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Type checking
    "strict": true,
    "skipLibCheck": true,

    // Compatibility
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
